<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y24"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/car_number_add_sub_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingLeft="@dimen/x34_5"
        android:paddingRight="@dimen/x34_5"
        android:singleLine="true"
        android:textColor="@color/b333333_ffffff"
        android:textSize="@dimen/x12" />

    <TextView
        android:id="@+id/tv_sub"
        style="@style/item_car_number_add_sub_style"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:text="â€”"
        android:textColor="#8389A0" />

    <TextView
        android:id="@+id/tv_add"
        style="@style/item_car_number_add_sub_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:text="+"
        android:textColor="#8389A0" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_sub"
        android:background="@color/be3e6e4_29ffffff" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/tv_add"
        android:background="@color/be3e6e4_29ffffff" />

</RelativeLayout>