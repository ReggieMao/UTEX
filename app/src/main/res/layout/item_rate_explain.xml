<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rate_explain_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y24"
    android:background="@color/bffffff_1e2129"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/iv_item_rate_explain"
        android:layout_width="@dimen/y9"
        android:layout_height="@dimen/y9"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_rate_explain_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/iv_item_rate_explain"
        android:text="gzh"
        android:textColor="@color/b333333_b2ffffff"
        android:textSize="@dimen/x12" />

    <TextView
        android:id="@+id/tv_rate_explain_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x121_5"
        android:text="0.0005"
        android:textColor="@color/b333333_b2ffffff"
        android:textSize="@dimen/x12" />

    <TextView
        android:id="@+id/tv_rate_explain_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x13"
        android:text="0.01"
        android:textColor="@color/b333333_b2ffffff"
        android:textSize="@dimen/x12" />


</RelativeLayout>