            android:src="@drawable/icon_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/be3e6e4_29ffffff" />
    </RelativeLayout>

