            android:text="sgsupport@utex.sg"
            android:textColor="@color/b999999_66ffffff"
            android:textSize="@dimen/x12" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
