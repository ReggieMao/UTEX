        <ImageView
            android:id="@+id/iv_about_us_icon"
            android:layout_width="@dimen/x61_5"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginTop="@dimen/y8_5"
            android:src="@mipmap/ic_launcher" />

        <TextView
