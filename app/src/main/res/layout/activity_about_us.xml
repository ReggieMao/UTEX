            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/y17"
            android:layout_toRightOf="@id/iv_about_us_icon"
            android:text="@string/app_name"
            android:textColor="@color/b333333_b2ffffff"
            android:textSize="@dimen/x13_5" />

        <TextView
            android:id="@+id/tv_about_us_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about_us_exnow_label"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@id/iv_about_us_icon"
            android:text="V 1.1.0"
            android:textColor="@color/b999999_66ffffff"
            android:textSize="@dimen/x10" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/y3"
