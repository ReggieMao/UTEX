<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/bffffff_13151a"
        android:maxHeight="@dimen/y129"
        android:paddingBottom="@dimen/y10"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:paddingTop="@dimen/y10">

        <TextView
            android:id="@+id/tv_gender_cannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/qu_xiao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y17"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gender_nan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y27"
                android:gravity="center"
                android:text="@string/nan" />

            <include layout="@layout/divide_line" />

            <TextView
                android:id="@+id/tv_gender_nv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y27"
                android:gravity="center"
                android:text="@string/nv" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>