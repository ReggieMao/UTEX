<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y18"
        android:background="@color/bffffff_13151a"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13">

        <TextView
            android:id="@+id/tv_vol_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shi_jian"
            android:textColor="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x10_5" />

        <TextView
            android:id="@+id/tv_vol_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x52"
            android:layout_toRightOf="@id/tv_vol_time"
            android:text="@string/fang_xiang"
            android:textColor="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x10_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x52"
            android:layout_toRightOf="@id/tv_vol_direction"
            android:text="@string/jia_ge"
            android:textColor="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x10_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/shu_liang"
            android:textColor="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x10_5" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_vol_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>