<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/x34_5"
        android:layout_marginRight="@dimen/x34_5"
        android:background="@drawable/shape_identity_help_bg"
        android:maxHeight="@dimen/y129"
        android:orientation="vertical">

        <TextView
            style="@style/textBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y8_5"
            android:text="@string/ren_zheng_xu_zhi"
            android:textColor="@color/b666666_99ffffff"
            android:textSize="@dimen/x15_5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/y8_5"
            android:background="@color/be3e6e4_29ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginRight="@dimen/x17"
            android:layout_marginTop="@dimen/y6"
            android:lineSpacingExtra="@dimen/y4"
            android:text="@string/tv_identity_help_text"
            android:textColor="@color/b999999_e6ffffff"
            android:textSize="@dimen/x12" />

        <TextView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y24"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y10"
            android:background="@drawable/login_selector"
            android:gravity="center"
            android:text="@string/wo_yi_liao_jie"
            android:textColor="@color/fffffff"
            android:textSize="@dimen/x13_5" />

    </LinearLayout>


</RelativeLayout>