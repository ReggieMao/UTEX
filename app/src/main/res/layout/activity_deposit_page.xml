<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bffffff_13151a"
    android:orientation="vertical"
    tools:context=".mvp.block.view.BlockActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_block_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/bffffff_13151a3"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_page_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/nav_icon_back" />

            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y8_5"
                android:textColor="@color/b333333_e6ffffff"
                android:textSize="@dimen/x15_5" />

            <TextView
                android:id="@+id/tv_page_deposit_withdrawal_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginRight="@dimen/x13"
                android:text="@string/chong_ti_ji_lu"
                android:textColor="@color/f398155"
                android:textSize="@dimen/x13" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view_top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tb_block_title_bar"
        android:background="@color/be3e6e4_29ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top_line"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_deposit_page_qrcode"
            android:layout_width="@dimen/x170_5"
            android:layout_height="@dimen/y120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y24" />

        <TextView
            android:id="@+id/tv_page_cnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y5"
            android:gravity="center_horizontal"
            android:text="@string/he_dui_qian_bao_tu_xing_yu_shang_fang_tu_an_yi_zhi"
            android:textColor="@color/b999999_e6ffffff"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_deposit_page_cnc_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y29"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/shape_deposit_page_cnc_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8_5"
                android:text="@string/chong_zhi_di_zhi"
                android:textColor="@color/b666666_66ffffff" />

            <TextView
                android:id="@+id/tv_deposit_cnc_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8_5"
                android:ellipsize="marquee"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/b333333_b2ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_deposit_page_tag_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y29"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:layout_marginTop="@dimen/y12"
            android:background="@drawable/shape_deposit_page_cnc_bg">

            <TextView
                android:id="@+id/tv_deposit_page_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8_5"
                android:text="@string/chong_zhi_di_zhi"
                android:textColor="@color/b666666_66ffffff" />

            <TextView
                android:id="@+id/tv_deposit_cnc_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8_5"
                android:textColor="@color/b333333_b2ffffff" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_page_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y18"
            android:textColor="@color/b999999_e6ffffff"
            android:textSize="@dimen/x13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/wen_xin_ti_shi"
            android:textColor="@color/b666666_99ffffff"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_page_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:layout_marginTop="@dimen/y3"
            android:textColor="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_block_bottom_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentBottom="true"
        android:background="@color/bffffff_13151a">

        <TextView
            android:id="@+id/tv_page_copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fu_zhi_di_zhi"
            android:textColor="@color/b999999_e6ffffff"
            android:textSize="@dimen/x13_5" />

        <TextView
            android:id="@+id/tv_page_save_qrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/f398155"
            android:gravity="center"
            android:text="@string/bao_cun_er_wei_ma"
            android:textColor="@color/fffffff"
            android:textSize="@dimen/x13_5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/ll_block_bottom_parent"
        android:background="@color/be3e6e4_29ffffff"/>

</RelativeLayout>