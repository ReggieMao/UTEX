<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bffffff_13151a"
    android:orientation="vertical"
    tools:context=".mvp.mine.view.WeChatActivity">

    <include layout="@layout/toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bebebeb"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/da_xin"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/y36"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/iv_we_chat_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_we_chat_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y18"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bebebeb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_we_chat_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fu_zhi_wei_xin_hao"
            android:textColor="@color/b999999_66ffffff"
            android:textSize="@dimen/x13_5" />

        <TextView
            android:id="@+id/tv_we_chat_save_qr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/f398155"
            android:gravity="center"
            android:text="@string/bao_cun_er_wei_ma"
            android:textColor="@color/fffffff"
            android:textSize="@dimen/x13_5" />

    </LinearLayout>

</LinearLayout>