<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bffffff_13151a"
    android:orientation="vertical"
    tools:context=".mvp.search.view.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38_5"
        android:background="@color/bffffff_13151a"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y16_5"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y4_5"
            android:layout_marginLeft="@dimen/x13"
            android:layout_weight="1"
            android:background="@drawable/search_et_bg"
            android:drawableLeft="@drawable/home_icon_search"
            android:drawablePadding="@dimen/x7"
            android:hint="@string/sou_suo_bi_zhong"
            android:paddingLeft="@dimen/x13"
            android:textColor="@color/b333333_ffffff"
            android:textColorHint="@color/bafb3b0_42ffffff"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_search_cannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y4_5"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13"
            android:text="@string/qu_xiao"
            android:textColor="@color/f398155"
            android:textSize="@dimen/x13_5" />

    </LinearLayout>

    <include layout="@layout/divide_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>